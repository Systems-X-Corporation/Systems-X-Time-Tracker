@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="card">
    <div class="card-header">

        Approve Days

    </div>

    <div class="card-body">
        <!-- Quick Actions Section -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <h5><i class="icon-copy dw dw-notification mb-3"></i> Quick Actions</h5>
                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <button type="button" id="btnShowAllPending" class="btn btn-warning btn-sm mr-2">
                            <i class="icon-copy dw dw-clock"></i> Show All Pending Approvals
                        </button>
                        <button type="button" id="btnShowToday" class="btn btn-info btn-sm mr-2">
                            <i class="icon-copy dw dw-calendar1"></i> Today's Pending
                        </button>
                        <button type="button" id="btnShowThisWeek" class="btn btn-primary btn-sm mr-2">
                            <i class="icon-copy dw dw-calendar-1"></i> This Week's Pending
                        </button>
                        <button type="button" id="btnGetReport" class="btn btn-secondary btn-sm mr-2">
                            <i class="icon-copy dw dw-analytics-21"></i> Generate Report
                        </button>
                        <button type="button" id="btnClearFilters" class="btn btn-outline-secondary btn-sm">
                            <i class="icon-copy dw dw-clear"></i> Clear All Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Approvals Summary -->
        <div class="row mb-3" id="summarySection" style="display: none;">
            <div class="col-12">
                <div class="alert alert-warning" id="summaryContent">
                    <!-- Summary will be loaded here -->
                </div>
            </div>
        </div>

        <h5 class="mt-3 mb-3">Advanced Filters (Optional)</h5>
            <div class="row">
                <div class="col-lg-2">
                    <label>Quick Filter:</label>
                    <select class="custom-select2 form-control" id="cboQuickFilter" name="cboQuickFilter">
                        <option value="">Select...</option>
                        <option value="day">Today</option>
                        <option value="week">This Week</option>
                        <option value="lastweek">Last Week</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <label>Client (Optional):</label>
                    <div id="CboCustomerContent">
                        @Html.Action("GetCboCustomer", "System")
                    </div>
                </div>
                <div class="col-lg-2">
                    <label>Project (Optional):</label>
                    <div id="CboProjectContent">
                        @Html.Action("GetCboProject", "System")
                    </div>
                </div>
                <div class="col-lg-2">
                    <label>User (Optional):</label>
                    @Html.Action("GetCboUsers", "System")
                </div>
                <div class="col-lg-2">
                    <label>Status:</label>
                    <select class="custom-select2 form-control" id="cboRecords" name="cboRecords">
                        <option value="">Pending Only</option>
                        <option value="All">All Records</option>
                        <option value="Sent">Sent</option>
                        <option value="Under Review">Under Review</option>
                        <option value="Approved">Approved</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="row" id="customDateRange" style="display: none;">
                <div class="col-lg-3">
                    <label>From:</label>
                    <div id="cboDateContent">
                        <input type="date" name="from" id="from" />
                    </div>
                </div>
                <div class="col-lg-3">
                    <label>To:</label>
                    <div id="cboDatesContent">
                        <input type="date" name="to" id="to" />
                    </div>
                </div>
                <div class="col-lg-1">
                    <label></label>
                    <div id="cboDatesContent">
                        <button type="button" id="btnSearch" class="btn btn-success"><i class="dw dw-search"></i></button>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-12">


                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix mb-20">
                            <div class="pull-left">
                                <h4 class="text-lime h4">Data</h4>

                            </div>

                        </div>

                        <div class="table-responsive">
                            <div id="ApproveList">
                            </div>



                        </div>
                    </div>

                </div>


            </div>

    </div>
</div>



<script src="~/Scripts/Timer/ApproveDaysList.js"></script>

